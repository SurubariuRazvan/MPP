<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTimePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css"
           xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.AppController">
    <BorderPane prefHeight="200.0" prefWidth="200.0">
        <center>
            <TableView fx:id="tripDTOTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="tableDestination" maxWidth="40000.0" minWidth="140.0" prefWidth="200.0"
                                 text="Destination"/>
                    <TableColumn fx:id="tableDeparture" maxWidth="20000.0" minWidth="110.0" prefWidth="150.0"
                                 text="Departure time"/>
                    <TableColumn fx:id="tableFreeSeats" maxWidth="80.0" minWidth="80.0" text="FreeSeats"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </center>
        <bottom>
            <GridPane BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="5.0" minWidth="5.0" prefWidth="5.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="110.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="5.0" minWidth="5.0" prefWidth="5.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="90.0" minWidth="90.0" prefWidth="90.0"/>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0"
                                       prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <BorderPane.margin>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="15.0"/>
                </BorderPane.margin>
                <JFXTextField fx:id="searchByDestination" labelFloat="true" maxWidth="1.7976931348623157E308"
                              promptText="Destination"/>
                <JFXButton fx:id="searchButton" onAction="#searchByDestinationAndDate" text="Search"
                           GridPane.columnIndex="5"/>
                <JFXDatePicker fx:id="searchByDate" editable="false" maxWidth="1.7976931348623157E308"
                               promptText="Departure date" GridPane.columnIndex="2"/>
                <JFXTimePicker fx:id="searchByTime" promptText="Time" GridPane.columnIndex="4"/>
            </GridPane>
        </bottom>
    </BorderPane>
</StackPane>
